/* Importing Google Font */
@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap');





/* Global Styles */
body {
  font-family: 'Roboto', sans-serif; /* Imported font */
  margin: 0;
  padding: 0;
  line-height: 1.6;
}

header {
