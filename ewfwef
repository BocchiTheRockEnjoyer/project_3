}






/* Navigation Styles */
#main-nav {
  text-align: center; /* Center the navigation */
  background: #f2f2f2; /* Navigation background color */
  padding: 1rem 0;
}

#main-nav ul {
  list-style: none; /* Remove list-style from navigation */
  padding: 0; /* Remove padding */
  margin: 0; /* Remove margin */
}

#main-nav li {
  display: inline; /* Horizontal display for nav items */
  margin: 0 1.5rem; /* Spacing between items */
}

#main-nav a {
  text-decoration: none; /* Remove underline from links */
  color: #333; /* Link color */
  font-weight: bold; /* Bold links */
}






/* Main Content Styles */
#content-wrapper {
  max-width: 800px; /* Fixed width for content area */
  margin: 0 auto; /* Center content */
  padding: 2rem;
}

section {
  margin-bottom: 2rem; /* Space between sections */
  padding: 1rem;
  background: #e9e9e9; /* Section background color */
  border-radius: 8px; /* Rounded corners */
}

h1, h2, h3 {
  font-size: 2rem; /* Heading font size */
  margin-bottom: 1rem; /* Space below headings */
}

p {
  font-size: 1rem; /* Paragraph font size */
}

img {
  max-width: 100%; /* Responsive images */
  height: auto; /* Maintain aspect ratio */
  border-radius: 2px; /* Rounded corners for images */
  margin: 0.5rem 0; /* Spacing between images */
}







/* Specific Styles for Each Page */

