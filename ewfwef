}





/* Responsive Design */
@media (max-width: 768px) {
  #main-nav li {
    display: block; /* Stack nav items vertically on small screens */
    margin: 0.5rem 0; /* Adjust margin for vertical stacking */
  }

  #content-wrapper {
    padding: 1rem; /* Reduced padding for smaller screens */
  }

  section {
    padding: 0.5rem; /* Reduced padding in sections */
  }
}

/* Fluid Layout */
body {
  font-size: 1rem; /* Base font size */
}

/* Ensure consistent styling across pages */
h2 {
  font-size: 1.75rem; /* Subheading font size */
  margin-bottom: 1rem; /* Space below subheadings */
}
